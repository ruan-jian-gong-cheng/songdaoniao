@using ClassLibrary1

@{
    Layout = null;
    ViewBag.Title = "HaveReceivedOrder";
    List<order> order = ViewBag.List;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HaveReceived</title>
    
</head>
<body>

        <div>
            <h3>您已接收的订单：</h3>
            <table>
                <thead>
                    <tr>
                        <td>订单号</td>
                        <td>生成时间</td>
                        <td>订单类型</td>
                        <td>具体要求</td>
                        <td>收件人ID</td>
                        <td>收件人电话</td>
                        <td>打赏小费</td>
                        <td>订单状态</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (order li in order)
                    {

                    <tr>
                        <td>@li.OrderNumber</td>
                        <td>@li.Date</td>
                        <td>@li.Type</td>
                        <td>@li.Text</td>
                        <td>@li.ClientID</td>
                        <td>@li.ClientPhone</td>
                        <td>@li.Tip</td>
                        <td>@li.State</td>
                        <td>@Html.ActionLink("退单", "CancelOrder", new { orderid = li.OrderNumber })</td>
                        <td>@Html.ActionLink("已完成", "FinishOrder", new { orderid = li.OrderNumber })</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        
         <br />
         <p>若您想返回继续接单：</p>
         <input type="submit" onclick='location.href=("/ReceiveOrder/Index")' value="点击返回" />
</body>
</html>
