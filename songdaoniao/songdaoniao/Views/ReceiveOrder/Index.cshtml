@using ClassLibrary1

@{
    Layout = null;
    ViewBag.Title = "Index";
    List<order> order = ViewBag.List;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
</head>
<body>
    
        <div>
            <h3>当前所有待接的订单：</h3>
            <table>
                <thead>
                    <tr>
                        <td>订单号</td>
                        <td>生成时间</td>
                        <td>订单类型</td>
                        <td>具体要求</td>
                        <td>收件人ID</td>
                        <td>收件人电话</td>
                        <td>打赏</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (order li in order)
                    {
                        <tr>
                            <td>@li.OrderNumber</td>
                            <td>@li.Date</td>
                            <td>@li.Type</td>
                            <td>@li.Text</td>
                            <td>@li.ClientID</td>
                            <td>@li.ClientPhone</td>
                            <td>@li.Tip</td>
                            <td>@Html.ActionLink("接单", "HaveReceived", new {orderid=li.OrderNumber})</td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    
    <br />
    <p>查看您已接收的订单：</p>
    <input id="Button" type="submit" onclick='location.href=("/ReceiveOrder/HaveReceived")' value="点击查看" />
</body>
</html>
