<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <title>送到鸟</title>
    <!-- 引入字体图标 -->
    <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    @Styles.Render("~/Content/Master.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar">
        <input type="checkbox" id="checkbox">
        <label for="checkbox">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </label>
        <ul>
            <li>
                <img src="~/Images/LOGO.PNG" />
                <span>欢迎您！</span>
            </li>
            <li style="cursor:pointer" onclick='location.href=("/CreateOrder/Create_Only")'>
                <a>
                    <i  class="fa fa-home" aria-hidden="true"></i>
                    <span>发布订单</span>
                </a>
 
            </li>
            <li style="cursor:pointer" onclick='location.href=("/ViewOrder/PersonalView_Only")'>
                <a>
                    <i class="fa fa-sitemap" aria-hidden="true"></i>
                    <span>历史订单</span>
                </a>
            </li>
            <li style="cursor:pointer" onclick='location.href=("/LogIn/Ceshi")'>
                <a>
                    <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                    <span>选择角色</span>
                </a>
            </li>
            <li style="cursor:pointer" onclick='location.href=("/LogIn/Index")'>
                <a>
                    <i class="fa fa-th-large" aria-hidden="true"></i>
                    <span>退出账号</span>
                </a>
            </li>
        </ul>
        <div class="main">
            <div class="content">
                @RenderBody()
            </div>

        </div>
    </div>


   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
